<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.junglist963.quiz_game">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/quiz_img"
        android:label="@string/app_name"
        android:roundIcon="@drawable/quiz_img"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizGame">
        <activity android:name=".ScoreActivity"></activity>
        <activity android:name=".QuizActivity" />
        <activity
            android:name=".Forgot_psw_activity"
            android:parentActivityName=".Login_Activity"
            android:theme="@style/Theme.Login" />
        <activity
            android:name=".Register_Activity"
            android:parentActivityName=".Login_Activity"
            android:theme="@style/Theme.Login" />
        <activity
            android:name=".Login_Activity"
            android:theme="@style/Theme.Login" />
        <activity
            android:name=".Splash_Screen_Activity"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>